<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
         <solid android:color="#222" />
        </shape>
    </item>
    <item
        android:top="1px"
        android:bottom="1px"
        >
        <shape android:shape="rectangle" >
         <solid android:color="#888" />
        </shape>
    </item>
    <item
        android:top="2px"
        android:bottom="2px"
        >
        <shape android:shape="rectangle" >
           <gradient
                android:angle="-90"  
                android:endColor="#777"
                android:startColor="#999" />
        </shape>
    </item>

</layer-list> 