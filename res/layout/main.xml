<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      style="@style/body">
    <!-- header -->
    <RelativeLayout style="@style/wrap_y" android:gravity="center_vertical">
    <LinearLayout style="@style/header.wrapper">
        <TextView style="@style/header.text"/>
        <TextView style="@style/header.text.red"/>
    </LinearLayout>
    </RelativeLayout>
	<!-- body -->
	<LinearLayout style="@style/fill_xy" android:gravity="center" >
	<GridView xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/homeGrid"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
    android:padding="0dp"
    android:verticalSpacing="2dp"
    android:horizontalSpacing="1dp"
    android:numColumns="1"
    android:stretchMode="columnWidth"
    android:gravity="center_horizontal"
    android:background="@color/body_bg">
</GridView>
</LinearLayout>
</LinearLayout>
