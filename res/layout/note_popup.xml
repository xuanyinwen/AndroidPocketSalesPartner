<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrap_xy"
    android:background="@drawable/popup_bg" >

    <LinearLayout
        style="@style/wrap_xy"
        
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            style="@style/wrap_xy"
            android:background="@drawable/stickynote"
            android:padding="10dp"
            android:orientation="vertical"
            android:width="240dp" >
			<LinearLayout style="@style/wrap_xy" android:paddingTop="20dp" android:paddingBottom="20dp">
				<EditText
				    android:lines="1"
				    android:hint="Title"
				    android:layout_width="200dp"
				    android:id="@+id/popup_title_text"
				    android:inputType="textCapWords"
				    android:imeOptions="actionNext"
				    
				    style="@style/note_edittext"/>
                
            </LinearLayout>
            <LinearLayout style="@style/wrap_xy">  
				<EditText 
				    android:lines="4"
				    android:layout_width="200dp"
				    android:hint="Message"
				    android:id="@+id/popup_body_text"
				    
				    style="@style/note_edittext"/>
                
            </LinearLayout>  

            <LinearLayout
                style="@style/wrap_y"
                android:gravity="center" >

                <Button
                    android:id="@+id/popup_write"
                    style="@style/button"
                    android:text="Save" />

            </LinearLayout>

            
        </LinearLayout>
    </LinearLayout>
 <ImageView style="@style/close_icon.note" android:layout_gravity="right|top" android:id="@+id/pu_note_close_icon"/>
</FrameLayout>