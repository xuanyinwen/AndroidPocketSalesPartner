<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/row.wrapper"
    android:layout_width="@style/wrap_y"
    android:orientation="horizontal" >

    <LinearLayout style="@style/row.thumbnail_wrapper" android:id="@+id/tmr_thumbnailwrapper">

        <ImageView
            android:id="@+id/tmr_thumbnail"
            style="@style/row.thumbnail"
            android:src="@drawable/icon" />
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_y"
        android:layout_width="fill_parent"
        android:orientation="vertical" 
        android:layout_weight="1">

        <TextView
            android:id="@+id/tmr_title"
            style="@style/text"
            android:padding="5dp"
            />
                
        <TextView
            android:padding="5dp"
            android:id="@+id/tmr_address"
            style="@style/text"/>

        <TextView
            android:padding="5dp"
            android:id="@+id/tmr_price"
            style="@style/text" />
        
        <TextView
            android:padding="5dp"
            android:id="@+id/tmr_rv"
            style="@style/text"/>
        <TextView
            android:padding="5dp"
            android:id="@+id/tmr_agentName"
            style="@style/text"
            android:visibility="gone"/>

        
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bedrooms_icon"
                style="@style/listing_icon"
                android:src="@drawable/ic_bed" />

            <TextView
                android:id="@+id/bedrooms"
                style="@style/row.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="XX" />

            <ImageView
                android:id="@+id/bathrooms_icon"
                style="@style/listing_icon"
                android:src="@drawable/ic_bath" />

            <TextView
                android:id="@+id/bathrooms"
                style="@style/row.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="XX" />
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        style="@style/wrap_xy"
        android:layout_gravity="center_vertical|right" >

        <ImageView style="@style/arrow" />
    </LinearLayout>

</LinearLayout>