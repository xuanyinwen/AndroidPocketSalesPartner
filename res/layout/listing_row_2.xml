<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/row.wrapper"
    android:orientation="horizontal" >

    <LinearLayout style="@style/row.thumbnail_wrapper" >

        <ImageView
            android:id="@+id/row_thumbnail"
            style="@style/row.thumbnail" />
    </LinearLayout>

    <LinearLayout
        style="@style/row.right_col"
        android:orientation="vertical" >
	
        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="Ref"
            android:textAppearance="@style/row.text" />

        <TextView
            android:id="@+id/street"
            style="@style/row.text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:text="street" />

        <TextView
            android:id="@+id/listing_row_DisplayPrice"
            style="@style/row.text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="[Display Price]" />

        <LinearLayout
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/camera_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="1dip"
                android:src="@drawable/camera_icon" />

            <TextView
                android:id="@+id/listingrow_camera"
                style="@style/row.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="XX" />

            <ImageView
                android:id="@+id/bedrooms_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="1dip"
                android:src="@drawable/icon_bed" />

            <TextView
                android:id="@+id/bedrooms"
                style="@style/row.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="XX" />

            <ImageView
                android:id="@+id/bathrooms_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="1dip"
                android:src="@drawable/icon_bath" />

            <TextView
                android:id="@+id/bathrooms"
                style="@style/row.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:text="XX" />

            <ImageView
                android:id="@+id/garaging_icon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="1dip"
                android:src="@drawable/icon_car" />

            <TextView
                android:id="@+id/garaging"
                style="@style/row.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>